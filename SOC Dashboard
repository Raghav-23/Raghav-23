  <row>
    <panel>
      <title>Top 20 IPs that generate most errors and 200s co-related.</title>
      <chart>
        <search>
          <query>index=* AND (sc_status=302 OR sc_status=304 OR sc_status=403 OR sc_status=404 OR sc_status=500 OR sc_status=200) 
| stats count(sc_status) as "Total Counts" count(eval(sc_status=302)) as "302 moved" count(eval(sc_status=304)) as "304 Not Modified" count(eval(sc_status=403)) as "403 Forbidden" count(eval(sc_status=404)) as "404 not found" count(eval(sc_status=500)) as "500 Internal Server Error" count(eval(sc_status=200)) as "200 ok" by X_Forwarded_For 
| sort 20 - "404 not found"
| bucket _time span=1d</query>
          <earliest>1649304000.000</earliest>
          <latest>1649393296.000</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>2m</refresh>
          <refreshType>delay</refreshType>
        </search>
